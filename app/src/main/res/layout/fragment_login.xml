    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_marginTop="-30dp"-->
    <!--android:src="@drawable/login_header" />-->
    <!--login-->
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
                app:cardBackgroundColor="#b3f78426"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/White"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_username"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/White"
                    android:drawableStart="@drawable/ic_person_24dp"
                    android:drawablePadding="15dp"
                    android:hint="Username"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"

                    android:textCursorDrawable="@null" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilsecond"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textColorHint="@color/White"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_password"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"


                    android:backgroundTint="@color/White"
                    android:drawableStart="@drawable/ic_pass_24dp"
                    android:drawablePadding="15dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:textCursorDrawable="@null" />
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mainbtn"
                android:text="Log In"
                android:textColor="@color/White"

                android:textSize="@dimen/large_textsize" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/login_footer" />
</RelativeLayout>


